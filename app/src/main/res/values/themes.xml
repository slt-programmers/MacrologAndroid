<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application LIGHT theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/darkblue</item>
        <item name="colorAccent">@color/lightblue</item>
        <item name="android:fontFamily">@font/assistant_light</item>

        <!-- All buttons, unless style is defined on xml -->
        <item name="buttonStyle">@style/buttonRound</item>

        <item name="alertDialogTheme">@style/alertDialogTheme</item>

        <!-- Color selected item -->
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/darkblue</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="bottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">12sp</item>
    </style>
</resources>